{
  "name": "antideepfake",
  "version": "1.0",
  "description": "Chrome browser extension for simple hash-based deepfake detection and alerting",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["loader.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["detection.js"]
    }
  ],
  "manifest_version": 2
}